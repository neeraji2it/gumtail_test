
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put,:class => "message" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <table>
    <tr>
      <td><%= f.label :password, "New password" %></td>
      <td><%= f.password_field :password, :autofocus => true %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, "Confirm new password" %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "Change my password" %></td>
    </tr>
  </table>
<% end %>

<%= render "devise/shared/links" %>
