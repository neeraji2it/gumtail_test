<div>
	<%= form_for(@question,remote: true) do |f| %>
		<% if current_user and !current_user?(@user)%>
			<%= f.text_area :body, value: "Ask me anything" %>
			<%= f.hidden_field :questioned_id, value: @user.id %>
			<%= f.submit "Ask", class:"right" %>
		<% elsif !current_user %>
			<%= f.text_area :body, value: "Ask me anything" %>
			<%= link_to "Please login to ask a question.", root_url %>
		<% end %>

	<% end %>
	
</div>
<hr>